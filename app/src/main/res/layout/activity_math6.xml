<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appColorPurple"
    tools:context=".math_6">

    <ImageView
        android:id="@+id/TopBack"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginTop="-150dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vector_2"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:includeFontPadding="false"
        android:text="Сколько сторон\nу квадрата?"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/question_1"
        android:layout_width="170dp"
        android:layout_height="350dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:background="@color/white"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopBack"
        app:shapeAppearanceOverlay="@style/roundimageview"
        app:srcCompat="@drawable/four"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/textq_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:includeFontPadding="false"
        android:text="Четыре"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/question_1"
        app:layout_constraintStart_toStartOf="@+id/question_1"
        app:layout_constraintTop_toBottomOf="@+id/question_1" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/question_2"
        android:layout_width="170dp"
        android:layout_height="350dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/question_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/question_1"
        app:shapeAppearanceOverlay="@style/roundimageview"
        app:srcCompat="@drawable/six"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/textq_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:includeFontPadding="false"
        android:text="Шесть"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/question_2"
        app:layout_constraintStart_toStartOf="@+id/question_2"
        app:layout_constraintTop_toBottomOf="@+id/question_2" />

    <Button
        android:id="@+id/repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/appColorBtn"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:text="Повторить"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>