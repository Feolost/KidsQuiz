<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appColorPurple"
    tools:context=".okr_8">

    <ImageView
        android:id="@+id/TopBack"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vector_2"
        tools:ignore="ImageContrastCheck" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/object"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="68dp"
        android:background="@color/white"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/TopBack"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/TopBack"
        app:shapeAppearanceOverlay="@style/roundimageview"
        app:srcCompat="@drawable/question"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:includeFontPadding="false"
        android:text="Какая птица хвостом\nразноцветным гордится?"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/object" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/question_1"
        android:layout_width="170dp"
        android:layout_height="132dp"
        android:layout_marginStart="20dp"
        android:background="@color/white"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopBack"
        app:shapeAppearanceOverlay="@style/roundimageview"
        app:srcCompat="@drawable/filin"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/textq_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:includeFontPadding="false"
        android:text="Филин"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/question_1"
        app:layout_constraintStart_toStartOf="@+id/question_1"
        app:layout_constraintTop_toBottomOf="@+id/question_1" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/question_3"
        android:layout_width="170dp"
        android:layout_height="132dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_1"
        app:shapeAppearanceOverlay="@style/roundimageview"
        app:srcCompat="@drawable/popugai3"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/textq_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:includeFontPadding="false"
        android:text="Попугай"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/question_3"
        app:layout_constraintStart_toStartOf="@+id/question_3"
        app:layout_constraintTop_toBottomOf="@+id/question_3" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/question_2"
        android:layout_width="170dp"
        android:layout_height="132dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"

        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopBack"
        app:shapeAppearanceOverlay="@style/roundimageview"
        app:srcCompat="@drawable/vorobei2"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/textq_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:includeFontPadding="false"
        android:text="Воробей"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/question_2"
        app:layout_constraintStart_toStartOf="@+id/question_2"
        app:layout_constraintTop_toBottomOf="@+id/question_2" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/question_4"
        android:layout_width="170dp"
        android:layout_height="132dp"
        android:layout_marginTop="30dp"

        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:contentDescription="@string/app_name"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_2"
        app:shapeAppearanceOverlay="@style/roundimageview"
        app:srcCompat="@drawable/pavlik"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/textq_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:includeFontPadding="false"
        android:text="Павлин"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/question_4"
        app:layout_constraintStart_toStartOf="@+id/question_4"
        app:layout_constraintTop_toBottomOf="@+id/question_4" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/appColorBtn"
        android:text="Звук"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>